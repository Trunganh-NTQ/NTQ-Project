<h1 align="center">Listing all Content</h1>
<% if user_signed_in? %>
  <div class="row">
    <div class=" col-sm-8 col-sm-offset-1">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to "Add content", new_content_path, class: "btn btn-lg btn-default" %>
        </li>
        <li class="nav-item">
          <%= link_to "Or view  exsting contents", contents_path, class: "btn btn-lg btn-default" %>
        </li>
      </ul>
    </div>
  </div>

  <% @content.each do |content| %>
    <div class="row">
      <div class="well col-xs-8 col-xs-offset-1">
        <div class="row">
          <div class="col-xs-4">
            <div>
              <%= image_tag( "ava.jpg", alt: "Rails", class: "background-image-content" )%>
            </div>
            <div class="content-group">
              <div class="content-email">

                <div class="content-status">
                  <% if content.endDate>= Date.today %>
                    <h3 align="center">Learning</h3>
                    <% else %>
                      <h3 align="center">Done</h3>
                      <% end %>
                </div>

                <span>
              <img src="<%= content.user.pictures%>" alt="" id="avatar">
              <%= content.user.fullname %>
            </span>
              </div>
              <div class="content-body">
                <span> Start:
          <%=  content.startDate %></span>
                </br>
                <span>End:
        <%=  content.endDate %></span>
                </br>
                <span>Level:
        <%=  content.level %></span>
              </div>
              <div class="content-actions">
                <button style="opacity:0.6" type="button" class="btn btn-outline-dark">Take attendance</button>
              </div>
            </div>
          </div>
          <div class="col-xs-8">
            <div class="menu-content-drop">
              <div class="dropdown">
                <button class="btn dropdown-toggle" id="dropdownMenu" data-toggle="dropdown">
                  ...
                </button>
                <div class="dropdown-menu">
                  <div class="content-center">
                    <div class="row">
                      <div class="col-xs-2 col-xs-offset-3">
                        <%= link_to "Edit", edit_content_path(content), remote: true %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-2 col-xs-offset-3">
                        <%= link_to "Delete", content_path(content), method: :delete, data: { confirm: "Are you sure you want to delete this content?"} %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-2 col-xs-offset-3">
                        <%= link_to "Create enven", content_path(content) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="content-title">
              <%= link_to content.title, content_path(content) %>
            </div>
            <div class="content-body">
              <div class="comment more">
              <%= truncate sanitize(content.description, tags: [], attributes: []), length: 300, omission:'... Read More'%>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
    <div id="product-modal" class="modal fade"></div>
    <% end %>
          <%= paginate @content, theme: 'twitter-bootstrap-3' %>
<% end %>
