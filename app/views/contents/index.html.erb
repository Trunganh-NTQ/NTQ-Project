
<h1 align="center">Listing all Content</h1>

<% if user_signed_in? %>


<div class="bt-create">
  <div class="content-tab">
    <button class="content-tablinks" onclick="openCity(event, 'Create')">Add Content</button>
      <button class="content-tablinks" onclick="openCity(event, 'View-content ')">Or view exsting contents</button>
  </div>
</div>

          <%= link_to "Add content", new_content_path, class: "btn btn-lg btn-default" %>


 <% @content.each do |content| %>
 <div class="row">
  <div class="well col-xs-8 col-xs-offset-2">
  <div class="row">
    <div class="col-xs-4">
      <div>
        <%= image_tag("ava.jpg", alt: "Rails", class: "background-image" )%>
      </div>
      <div class="content-group">
          <div class="content-email">
            <span>
              <img src="<%= content.user.pictures%>" alt="" id="avatar">
              <%= content.user.fullname %>
            </span>
          </div>
        <div class="content-body">
          <span> Start:
          <%=  content.startDate %></span></br>
            <span>End:
        <%=  content.endDate %></span></br>
            <span>Level:
        <%=  content.level %></span>
      </div>
      <div class="content-actions">
        <button type="button" class="btn btn-default">Take attendance</button>
      </div>
    </div>
    </div>
  <div class="col-xs-4" >
      <div class="content-title">
          <%= link_to content.title, content_path(content) %>
      </div>
      <div class="content-body">
          <%= truncate(content.description, length:300 ) %>
     </div>
  </div>
   </div>
  </div>
 </div>
<% end %>
<% end %>
