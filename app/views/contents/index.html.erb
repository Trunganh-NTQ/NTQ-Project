<h1 align="center">Listing all Content</h1>
<div class="bt-create">
  <%= link_to "Add content", new_content_path, class: "btn btn-lg btn-info" %>
</div>
 <% @content.each do |content| %>
 <div class="row">
  <div class="well col-xs-8 col-xs-offset-2">
  <div class="row">
    <div class="col-xs-4">
      <div class="background-image">
     <%= image_tag("background.jpg", alt: "Rails contetn",id:"cover-contetn", height: '300', width: '250') %>
   </div>
  </div>
  <div class="col-xs-4" >
    <div class="content-title">
   <%= link_to content.title, content_path(content) %>
   </div>
   <div class="content-body">
    <%= truncate(content.description, length: 100) %>
    </div>
    <div class="content-actions">
  <%= link_to "Edit", edit_content_path(content), class: "btn btn-sm btn-primary" %>
     <%= link_to "Delete", content_path(content), method: :delete, data: { confirm: "Are you sure you want to delete this content?"}, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
   </div>
  </div>
 </div>
<% end %>
