<h1 align="center">Listing all Content</h1>
<% if user_signed_in? %>
<div class="bt-create">
  <%= link_to "Add content", new_content_path, class: "btn btn-lg btn-default" %>
</div>
 <% @content.each do |content| %>
 <div class="row">
  <div class="well col-xs-8 col-xs-offset-2">
  <div class="row">
    <div class="col-xs-4">
      <div>
        <%= image_tag("ava.jpg", alt: "Rails", class: "background-image" )%>

      <div class="content_group">
            <img src="<%= current_user.pictures%>" alt="" id="avatar">
          <div class="content-email">
            <span>
              <%= current_user.fullname %>
            </span>
          </div>
        <div class="content-body">
          <span> Start Date:</span>
          <%= link_to content.startDate, content_path(content) %>
        </div>
        <div class="content-body">
            <span>End Date:</span>
        <%= link_to content.endDate, content_path(content) %>
      </div>
      <div class="content-actions">
        <button type="button" class="btn btn-default">Take attendance</button>
      </div>
    </div>
    </div>
  </div>


  <div class="col-xs-4" >

      <div class="content-title">
          <%= link_to content.title, content_path(content) %>
      </div>
      <div class="content-body">
        <%= truncate(content.description, length:60) %>
      </div>
  </div>
   </div>
  </div>
 </div>
<% end %>
<% end %>
