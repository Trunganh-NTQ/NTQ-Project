<h1 align="center">New Content</h1>
<% if user_signed_in? %>
  <%=render 'shared/errors', obj: @content %>
    <div class="row">
      <div class=" col-sm-12 col-sm-offset-1">
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <%=link_to "Add content", new_content_path, class: "btn btn-lg btn-default" %>
          </li>
          <li class="nav-item">
            <%=link_to "Or view  exsting contents", contents_path, class: "btn btn-lg btn-default" %>
          </li>
        </ul>
      </div>
    </div>
    <%=form_for(@content, :html=> {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-1">
        </div>
        <div class="date">
          <div class="row">
            <div class="col-sm-4">
              <%=f.text_field :title,class: "form-control", placeholder: "Title", autofocus: true %>
            </div>
            <div class="col-sm-4">
              <%=select(:content, :level, [[ 'Beginner', 'Beginner'],[ 'intermediste', 'intermediste'],[ 'expert', 'expert']],{ include_blank: true },class: "form-control" )
              %>
            </div>
          </div>
        </div>
        <div class="control-label col-sm-1">
        </div>
        <div class="row">
          <div class="col-sm-4">
            <%=f.date_field :startDate,class: "form-control", placeholder: "Start Date" %>
          </div>
          <div class="col-sm-4">
            <%=f.date_field :endDate, class: "form-control", placeholder: "End Date" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="date">
          <div class="content-sz">
            <%=f.cktext_area :description,rows: 50, class: "form-control", placeholder: "Body of content" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <div class="star">
            <%=link_to 'Cancel', contents_path, class: "btn btn-default" %>
              <%=f.submit "Done", class: 'btn btn-primary btn-large' %>
          </div>
        </div>
      </div>
      </div>
      <% end %>
        <% end %>
