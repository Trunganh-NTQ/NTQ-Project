<%= form_for @event, url:events_path, remote: true do |f| %>
  <%= f.text_field :title, class:"form-control" %>
  <%= f.label :start_date %>
  <%= f.date_field :startDate, class:"form-control"  %>
  <%= f.label :end_date %>
  <%= f.date_field :endDate, class:"form-control"  %>
  <%= f.label :color %>
  <%= f.select :color, [['Black','black'], ['Green','green'], ['Red','red']],
    {}, {class: "form-control"} %>
  <%= f.submit "Submit", class:"btn btn-primary" %>
  <%= link_to 'Delete',
              event,
              method: :delete,
              class: 'btn btn-danger',
              data: { confirm: 'Are you sure?' },
              remote: true unless @event.new_record? %>
<% end %>
