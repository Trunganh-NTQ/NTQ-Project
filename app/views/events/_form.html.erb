<%= form_for @event, remote:true do |f| %>
  <%= f.hidden_field :group_id, value: params[:group_id] %>
<div class="row">
  <div class="control-label col-sm-12">
    <div class="event-form-pading">
      <%= f.text_field :title, class:"form-control", placeholder: "Title",required: true  %>
    </div>
    <div class="event-form-pading">
      <%=f.text_area :something,rows: 5, class: "form-control", placeholder: "Something about your event",required: true  %>
    </div>
    <div class="event-form-pading">
      <%= f.text_field :document, class:"form-control", placeholder: "Document Link ",required: true  %>
    </div>
    <div class="event-form-pading">
      <%= f.text_field :speaker, class:"form-control", placeholder: "Speaker",required: true  %>
    </div>
    <div class="row">
      <div class="control-label col-sm-6">
        <div class="event-form-pading">
         <%=f.text_field :startDate, class: "form-control datetimepicker",placeholder: "Start Date",required: true   %>
        </div>
          <script>
              $('.datetimepicker').datepicker({format: 'dd/mm/yyyy', startDate: '0d'});

          </script>
      </div>
      <div class="control-label col-sm-6">
        <div class="event-form-pading-select">

        <%= f.select :duration, [[ '25 minutes', '25' ],[ '85 minutes', '85'],[ '145 minutes', '145']],{}, {class: "js-example-tags select3"}  %>

          <script type="text/javascript">
             $(".js-example-tags").select2({tags: true});
          </script>

        </div>
      </div>
    </div>
  </div>
</div>

  <div class="event-button">
 <button type="button" class="btn btn-danger" data-dismiss="modal" >Cancel</button>
  <%= f.submit "Add", class:"btn btn-primary" %>
  </div>
<% end %>
$(".form_datetime").datetimepicker({format: 'H:M dd-mm-yyyy',startDate: '0d'});
