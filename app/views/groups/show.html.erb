<% if user_signed_in? %>
<div class="row">
  <div class=" col-sm-8 col-sm-offset-1">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <%= link_to "Add content", new_group_content_path(@group), class: "btn btn-lg btn-default" %>
      </li>
      <li class="nav-item">
        <%= link_to "Or view  exsting contents", group_path, class: "btn btn-lg btn-default" %>
      </li>
    </ul>
  </div>
</div>

<% if @contents.blank? %>
<h2 align="center">No Content just yet, would you like to add the first!</h2>
<% else %>

<% @contents.each do |content| %>
<div class="row">
  <div class="well col-xs-8 col-xs-offset-1">
    <div class="row">
      <div class="col-xs-4">
        <div>
          <%= image_tag( "ava.jpg", alt: "Rails", class: "background-image-content" )%>
        </div>
        <div class="content-group">
          <div class="content-email">

            <div class="content-status">
              <% if content.endDate>= Date.today %>
              <h3 align="center">Learning</h3>
              <% else %>
              <h3 align="center">Done</h3>
              <% end %>
            </div>

            <span>
              <img src="<%= content.user.pictures%>" alt="" id="avatar">
              <%= content.user.fullname %> <br>
              <div class="content-create-sz">
                <%= content.created_at %>
              </div>
            </span>
          </div>
          <div class="content-body">
            <div class="content-create-sz">
              <span> Start:
                <%=  content.startDate %></span>
              </br>
              <span>End:
                <%=  content.endDate %></span>
              </br>
              <span>Level:
                <%=  content.level %></span>
            </div>
          </div>
          <div class="content-actions">
            <div class="content-button">
              <button style="opacity:0.6" type="button" class="btn btn-outline-dark">Take attendance</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-8">
        <div class="row">
          <div class="col-xs-8">
            <div class="content-title">
              <%= content.title %>
            </div>
          </div>
          <div class="col-xs-4">
            <div class="menu-content-drop">
              <div class="dropdown">
                <button class="btn dropdown-toggle" id="dropdownMenu" data-toggle="dropdown">
                  ...
                </button>
                <ul class="dropdown-menu">
                  <li><%= link_to "Edit", edit_group_content_path(content.group, content),remote:true %></li>
                  <li>
                    <%= link_to "Delete", [content.group, content], method: :delete, data: { confirm: "Are you sure you want to delete this content?"} %>
                  </li>
                  <li><%= link_to "Create enven", group_path %></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="content-body">
              <div class="col-xs-12">
                <p><%= truncate sanitize(content.description, tags: [], attributes: []), length: 300 %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<div id="product-modal" class="modal fade"></div>
<% end %>
<%= paginate @contents, theme: 'twitter-bootstrap-3' %>
<% end %>
<% end %>